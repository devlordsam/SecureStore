<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_style"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/blurSky"
                android:text="@string/name_"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCPassportName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/neviBlue"
                android:autofillHints="Sam Smith"
                android:hint="@string/name"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/blurSky"
                android:text="@string/nationality_"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCPassportNationality"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="4dp"
                android:autofillHints="India"
                android:hint="@string/nationality"
                android:textColorHint="@color/neviBlue"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blurSky"
                android:layout_weight="0"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="@string/address_"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCPassportAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/neviBlue"
                android:layout_weight="1"
                android:autofillHints="varanasi, India"
                android:hint="@string/address"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="10dp"
                android:textColor="@color/blurSky"
                android:textStyle="bold"
                android:text="@string/passport_no_"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCPassportNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/neviBlue"
                android:layout_weight="1"
                android:autofillHints="Sam Smith"
                android:hint="@string/passport_no"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>